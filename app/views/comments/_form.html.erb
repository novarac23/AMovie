<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <%= form_for ([@movie,@comment]) do |m| %>

      <div class="form-group">
        <%= m.label :rating %>
        <%= m.number_field :rating, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= m.label :text %>
        <%= m.text_area :text, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= m.submit %>
      </div>

    <% end %>
  </div>
</div>
